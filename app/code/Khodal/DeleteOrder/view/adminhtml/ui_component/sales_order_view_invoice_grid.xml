<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="delete_invoices" class="Mavenbird\DeleteOrder\Ui\Component\Control\DeleteAction">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">khodal_deleteInvoice</item>
                        <item name="label" xsi:type="string" translate="true">Fix Invoices</item>
                        <item name="deleteAction" xsi:type="string">deleteorder/delete/massInvoice</item>
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Fix Invoices</item>
                            <item name="message" xsi:type="string" translate="true">Are you sure you want to fix selected invoice(s) ?</item>
                        </item>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
</listing>
